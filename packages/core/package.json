    "rehype-format": "^5.0.1",
    "rehype-stringify": "^10.0.1",
    "remark-rehype": "^11.1.1",
    "typescript": "^5.7.3",
    "unified": "^11.0.5",
    "unist": "^0.0.1",
    "unist-util-remove": "^4.0.0",
    "vfile": "^6.0.3"
  },
  "devDependencies": {
    "@types/unist": "^3.0.3",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-parse-frontmatter": "^1.0.3",
    "remark-stringify": "^11.0.0"
