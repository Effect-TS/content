{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.5.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "codegen": "pnpm --recursive --parallel run codegen",
    "build": "tsc -b tsconfig.build.json && pnpm --recursive --parallel run build",
    "circular": "node scripts/circular.mjs",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "check": "tsc -b tsconfig.json",
    "check-recursive": "pnpm --recursive exec tsc -b tsconfig.json",
    "lint": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,mjs}\"",
    "lint-fix": "pnpm lint --fix",
    "docgen": "pnpm --recursive --parallel exec docgen && node scripts/docs.mjs",
    "dtslint": "pnpm --recursive --parallel run dtslint",
    "dtslint-clean": "dtslint --installAll",
    "changeset-version": "changeset version && node scripts/version.mjs",
    "changeset-publish": "pnpm build && TEST_DIST= pnpm vitest && changeset publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.8",
    "@babel/plugin-transform-export-namespace-from": "^7.25.9",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@edge-runtime/vm": "^5.0.0",
    "@effect/build-utils": "^0.7.9",
    "@effect/docgen": "^0.5.2",
    "@effect/dtslint": "^0.1.2",
    "@effect/eslint-plugin": "^0.2.0",
    "@effect/experimental": "^0.40.0",
    "@effect/language-service": "^0.2.0",
    "@effect/platform": "^0.76.0",
    "@effect/platform-node": "^0.72.0",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vitest/browser": "^3.0.5",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/expect": "^3.0.5",
    "@vitest/web-worker": "^3.0.5",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "effect": "^3.12.11",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-codegen": "^0.29.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "fast-check": "^3.23.2",
    "glob": "^11.0.1",
    "madge": "^8.0.0",
    "playwright": "^1.50.1",
    "prettier": "^3.5.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "pnpm": {
    "updateConfig": {
      "ignoreDependencies": [
        "eslint"
      ]
    }
  }
}
